<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ouroboros.Android.MainPage"
             BackgroundColor="#1E1E1E">

    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header with menu buttons -->
        <Grid Grid.Row="0" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0"
                    Text="?"
                    FontSize="20"
                    BackgroundColor="#00AA00"
                    TextColor="#FFFFFF"
                    Clicked="OnMenuClicked"
                    WidthRequest="50"
                    HeightRequest="40" />
            
            <Label Grid.Column="1"
                   Text="Ouroboros CLI"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#00FF00"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
            
            <Button Grid.Column="2"
                    Text="??"
                    FontSize="18"
                    BackgroundColor="#00AA00"
                    TextColor="#FFFFFF"
                    Clicked="OnModelsClicked"
                    WidthRequest="50"
                    HeightRequest="40"
                    ToolTipProperties.Text="Model Manager" />
            
            <Button Grid.Column="3"
                    Text="??"
                    FontSize="18"
                    BackgroundColor="#00AA00"
                    TextColor="#FFFFFF"
                    Clicked="OnSettingsClicked"
                    WidthRequest="50"
                    HeightRequest="40"
                    ToolTipProperties.Text="Settings" />
        </Grid>

        <!-- Output Area (ScrollView with Label) -->
        <ScrollView Grid.Row="1" 
                    x:Name="OutputScrollView"
                    BackgroundColor="#000000"
                    Margin="0,10,0,10">
            <Label x:Name="OutputLabel"
                   Text="Ouroboros CLI&#x0a;Type 'help' to see available commands&#x0a;&#x0a;> "
                   FontFamily="Courier New"
                   FontSize="12"
                   TextColor="#00FF00"
                   BackgroundColor="#000000"
                   Padding="10"
                   LineBreakMode="WordWrap" />
        </ScrollView>

        <!-- Suggestions Panel -->
        <Frame Grid.Row="2"
               x:Name="SuggestionsFrame"
               IsVisible="False"
               BackgroundColor="#1A1A1A"
               BorderColor="#00AA00"
               CornerRadius="5"
               Padding="5"
               Margin="0,0,0,5"
               HasShadow="True">
            <CollectionView x:Name="SuggestionsView"
                            MaximumHeightRequest="150"
                            SelectionMode="Single"
                            SelectionChanged="OnSuggestionSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0"
                                   Text="{Binding Command}"
                                   TextColor="#00FF00"
                                   FontFamily="Courier New"
                                   FontSize="12" />
                            <Label Grid.Column="1"
                                   Text="{Binding Description}"
                                   TextColor="#808080"
                                   FontSize="10"
                                   HorizontalOptions="End" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Frame>

        <!-- Quick Actions Bar -->
        <ScrollView Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalScrollBarVisibility="Never"
                    Margin="0,0,0,5">
            <HorizontalStackLayout Spacing="5">
                <Button Text="help"
                        FontSize="10"
                        BackgroundColor="#005500"
                        TextColor="#FFFFFF"
                        Clicked="OnQuickCommand" />
                <Button Text="status"
                        FontSize="10"
                        BackgroundColor="#005500"
                        TextColor="#FFFFFF"
                        Clicked="OnQuickCommand" />
                <Button Text="models"
                        FontSize="10"
                        BackgroundColor="#005500"
                        TextColor="#FFFFFF"
                        Clicked="OnQuickCommand" />
                <Button Text="history"
                        FontSize="10"
                        BackgroundColor="#005500"
                        TextColor="#FFFFFF"
                        Clicked="OnQuickCommand" />
                <Button Text="hints"
                        FontSize="10"
                        BackgroundColor="#005500"
                        TextColor="#FFFFFF"
                        Clicked="OnQuickCommand" />
                <Button Text="clear"
                        FontSize="10"
                        BackgroundColor="#005500"
                        TextColor="#FFFFFF"
                        Clicked="OnQuickCommand" />
            </HorizontalStackLayout>
        </ScrollView>

        <!-- Input Area -->
        <Grid Grid.Row="4" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Text="?"
                    FontSize="16"
                    BackgroundColor="#005500"
                    TextColor="#FFFFFF"
                    Clicked="OnHistoryUpClicked"
                    WidthRequest="40" />

            <Entry Grid.Column="1"
                   x:Name="CommandEntry"
                   Placeholder="Enter command..."
                   PlaceholderColor="#808080"
                   TextColor="#00FF00"
                   BackgroundColor="#000000"
                   FontFamily="Courier New"
                   TextChanged="OnCommandTextChanged"
                   Completed="OnCommandEntered"
                   ReturnType="Done" />

            <Button Grid.Column="2"
                    Text="Execute"
                    BackgroundColor="#00AA00"
                    TextColor="#FFFFFF"
                    Clicked="OnExecuteClicked"
                    WidthRequest="100" />
        </Grid>
    </Grid>

</ContentPage>
